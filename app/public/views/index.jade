extends head

block content
  #background
    .loginContainer
      form(method="post")#signInForm
        input#user-signIn(type='text', name='user', placeholder='USERNAME')
        input#pass-signIn(type='password', name='pass', placeholder='PASSWORD')
        button#button-signIn(type='button') Sign in
      ul
        li
          a(href="/auth/google") Sign In with Google
        li
          a(href="/auth/spotify") Sign In with Spotify
        li
          a(href="/auth/facebook") Sign In with Facebook

block scripts
  script(src='/vendor/jquery.min.js')
  script(src='/vendor/jquery.form.js')
block customScripts
  script(src='/javascripts/signIn.js')